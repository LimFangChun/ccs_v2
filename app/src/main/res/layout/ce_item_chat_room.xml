<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_itemChatRoom_userRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_margin="5dp"
        android:paddingEnd="40dp"
        android:paddingBottom="20dp"
        android:background="#80569870"
        android:textColor="@color/colorWhite"
        tools:text="Text Message" />


    <TextView
        android:id="@+id/textView_itemChatRoom_userRightTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="12.35"
        app:layout_constraintBottom_toBottomOf="@+id/textView_itemChatRoom_userRight"
        app:layout_constraintEnd_toEndOf="@+id/textView_itemChatRoom_userRight" />

    <TextView
        android:id="@+id/textView_itemChatRoom_senderLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:background="#80203260"
        android:textColor="@color/colorWhite"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text Message" />


    <TextView
        android:id="@+id/textView_itemChatRoom_senderLeftTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="12.35"
        app:layout_constraintBottom_toBottomOf="@+id/textView_itemChatRoom_senderLeft"
        app:layout_constraintEnd_toEndOf="@+id/textView_itemChatRoom_senderLeft" />
</android.support.constraint.ConstraintLayout>