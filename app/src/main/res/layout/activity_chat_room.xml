<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:chatview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatRoomActivity"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar_chatRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <co.intentservice.chatui.ChatView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chatView_room"
        app:inputTextColor="@color/colorBlack"
        app:inputHint="@string/type_here"
        app:inputUseEditorAction="true"
        app:bubbleBackgroundSend="@color/colorWhite"
        app:messageTextColorSend="@color/colorBlack"
        app:bubbleBackgroundRcv="@color/colorPrimary"
        app:messageTextColorRcv="@color/colorBlack" />
</LinearLayout>