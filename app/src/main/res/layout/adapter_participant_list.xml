<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_userID"
        android:visibility="gone"
        android:enabled="false" />

    <ImageView
        android:id="@+id/imageView_profilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/dog_face"
        android:layout_margin="5dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView_profilePic"
        android:layout_toStartOf="@+id/textView_role"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textView_displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18sp"
            android:text="Name"
            tools:ignore="HardcodedText"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_lastOnline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:text="last_online"
            tools:ignore="HardcodedText"
            android:padding="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_role"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="ROLE"
        tools:ignore="HardcodedText"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:padding="5dp" />
</RelativeLayout>