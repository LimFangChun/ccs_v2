<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_profilePic_act"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/default_image"
                    app:srcCompat="@drawable/ic_person" />
                <TextView
                    android:id="@+id/textView_displayName_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView_profilePic_act"
                    android:textSize="18sp"
                    android:text="Gan Nar Psy"/>
                <TextView
                    android:id="@+id/textView_userID_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_displayName_act"
                    android:layout_toEndOf="@+id/imageView_profilePic_act"
                    android:textSize="14sp"
                    android:text="1" />
                <TextView
                    android:id="@+id/textView_gender_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_userID_act"
                    android:layout_toEndOf="@+id/imageView_profilePic_act"
                    android:textSize="14sp"
                    android:text="Not female" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/textView_studentDetails_act"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:textSize="25sp"
                    android:text="@string/student_details">
                </TextView>

                <TextView
                    android:id="@+id/textView_studentID_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_studentDetails_act"
                    android:layout_marginStart="15dp"
                    android:text="@string/student_id"
                    android:textSize="15sp">
                </TextView>

                <EditText
                    android:id="@+id/editText_studentID_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_studentID_act"
                    android:text="1709411"
                    android:focusable="false"
                    />

                <TextView
                    android:id="@+id/textView_faculty_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editText_studentID_act"
                    android:layout_marginStart="15dp"
                    android:text="@string/faculty"
                    android:textSize="15sp">
                </TextView>

                <EditText
                    android:id="@+id/editText_faculty_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_faculty_act"
                    android:text="FOCS"
                    android:focusable="false"
                    />

                <TextView
                    android:id="@+id/textView_courseYearGroupIntake_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editText_faculty_act"
                    android:layout_marginStart="15dp"
                    android:text="@string/tutorial_group"
                    android:textSize="15sp">
                </TextView>

                <EditText
                    android:id="@+id/editText_courseYearGroupIntake_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_courseYearGroupIntake_act"
                    android:text="RSD3 Group 2 May"
                    android:focusable="false"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>